<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10sp">

            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Recipe"
                android:id="@+id/view_recipe_name"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <TextView
                android:textAlignment="center"
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:text="Description"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
            <TextView
                android:paddingLeft="10dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:id="@+id/view_recipe_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="A short description about the recipe">
            </TextView>

            <TextView
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:text="Effort"
                android:layout_height="wrap_content" />
            <TextView
                android:paddingLeft="10dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:id="@+id/view_recipe_effort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Time that takes to cook">
            </TextView>

            <TextView
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:text="Ingredients"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/view_recipe_ingredients"
                android:hint="Type here the recipe ingredients. One ingredient per line">
            </TextView>

            <TextView
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:text="Steps"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:id="@+id/view_recipe_steps"
                android:layout_height="wrap_content"
                android:hint="Type here the recipe steps. One step per line">
            </TextView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:layout_alignParentRight="true"
    android:layout_alignParentBottom="true"
    android:layout_margin="10dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_shopping_list_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:backgroundTint="@color/teal_0"
            android:src="@drawable/ic_add_shopping_cart_24"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"/>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/edit_recipe_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/ic_baseline_edit_24"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"/>

    </LinearLayout>
</RelativeLayout>
