<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10sp">

        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Recipe"
            android:id="@+id/view_recipe_name"
            android:textColor="@color/black"
            android:textSize="20sp"/>

        <TextView
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:text="Description"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingLeft="10dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:id="@+id/view_recipe_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="A short description about the recipe">
        </TextView>

        <TextView
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:text="Effort"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingLeft="10dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:id="@+id/view_recipe_effort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Time that takes to cook">
        </TextView>

        <TextView
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:text="Ingredients"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/view_recipe_ingredients"
            android:hint="Type here the recipe ingredients. One ingredient per line">
        </TextView>

        <TextView
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:text="Steps"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:id="@+id/view_recipe_steps"
            android:layout_height="wrap_content"
            android:hint="Type here the recipe steps. One step per line">
        </TextView>

    </LinearLayout>
</ScrollView>