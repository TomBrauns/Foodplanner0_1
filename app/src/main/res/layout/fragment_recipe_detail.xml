<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.recipes.RecipesDetailFragment">

    <TextView
        android:id="@+id/recipes_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingTop="0dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/recipes_image"
        android:layout_width="184dp"
        android:layout_height="163dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="4dp"
        android:adjustViewBounds="true"
        android:elevation="5dp"
        android:scaleType="centerInside"
        android:src="@drawable/android"
        app:layout_constraintEnd_toStartOf="@id/recipes_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recipes_label"
        app:layout_constraintWidth_percent="0.25" />

    <TextView
        android:id="@+id/recipes_description_caption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingTop="2dp"
        android:paddingRight="10dp"
        android:paddingBottom="0dp"
        android:text="@string/recipes_description"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/recipes_image"
        app:layout_constraintTop_toBottomOf="@id/recipes_label"
        app:layout_constraintVertical_bias="0.005" />

    <TextView
        android:id="@+id/recipes_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:ellipsize="end"
        android:maxLines="5"
        android:minLines="3"
        android:paddingLeft="10dp"
        android:paddingTop="2dp"
        android:paddingRight="10dp"
        android:paddingBottom="0dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/recipes_image"
        app:layout_constraintTop_toBottomOf="@id/recipes_label"
        app:layout_constraintVertical_bias="0.036" />

    <TextView
        android:id="@+id/recipes_ingredients_caption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:ellipsize="end"
        android:minLines="1"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingTop="2dp"
        android:paddingRight="10dp"
        android:paddingBottom="0dp"
        android:text="@string/recipe_ingredients"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recipes_image"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/recipes_ingredients"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:ellipsize="end"

        android:minLines="2"
        android:paddingLeft="10dp"
        android:paddingTop="2dp"
        android:paddingRight="10dp"
        android:paddingBottom="0dp"
        android:textColor="@color/white"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/recipes_image"
        app:layout_constraintTop_toBottomOf="@id/recipes_ingredients_caption"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

