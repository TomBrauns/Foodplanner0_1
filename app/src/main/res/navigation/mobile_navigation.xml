<?xml version="1.0" encoding="utf-8"?>

<!-- This document is used for the fragment navigation -->
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_calender">

    <fragment
        android:id="@+id/navigation_user"
        android:name="com.example.foodplanner0_1.ui.user.UserFragment"
        android:label="@string/title_user"
        tools:layout="@layout/fragment_user" />

    <fragment
        android:id="@+id/navigation_calender"
        android:name="com.example.foodplanner0_1.ui.calender.WeeklyCalender"
        android:label="Calender"
        tools:layout="@layout/fragment_calender"/>

    <fragment
        android:id="@+id/navigation_recipes"
        android:name="com.example.foodplanner0_1.ui.recipes.ui.RecipeListFragment"
        android:label="RecipesFragment"
        tools:layout="@layout/fragment_recipes" >
        <action
            android:id="@+id/show_recipe_detail"
            app:destination="@id/recipeDetailFragment" />

    </fragment>


    <fragment
        android:id="@+id/recipeDetailFragment"
        android:name="com.example.foodplanner0_1.ui.recipes.RecipeDetailFragment"
        android:label="RecipesDetailFragment"
        tools:layout="@layout/fragment_recipe_detail" >
        <argument
            android:name="recipeId"
            app:argType="java.util.UUID" />

    </fragment>

    <fragment
        android:id="@+id/navigation_shoppingList"
        android:name="com.example.foodplanner0_1.ui.shoppinglist.ShoppingListFragment"
        android:label="@string/title_shoppingList"
        tools:layout="@layout/fragment_shoppinglist" />

</navigation>

